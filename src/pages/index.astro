---
import Layout from "../layouts/Layout.astro";
import Analytics from "@vercel/analytics/astro";
---

<Layout
  title="VantaJax • Find Black-owned businesses in Jacksonville, FL"
  description="VantaJax helps you find and support Black-owned businesses across Jacksonville, Florida."
  fullWidth={true}
>
  <section
    class="flex min-h-[calc(100vh-4rem)] items-center justify-center px-4"
  >
    <div class="w-full max-w-3xl text-center">
      <p class="text-[11px] font-semibold uppercase tracking-[0.25em] text-purple-600">
        VantaJax • Jacksonville, FL
      </p>

      <h1 class="mt-3 text-3xl sm:text-4xl font-semibold tracking-tight text-slate-900">
        Find and support Black-owned businesses in your area
      </h1>

      <p class="mt-3 text-sm sm:text-base text-slate-600 max-w-2xl mx-auto">
        VantaJax focuses on <span class="font-semibold text-purple-700">Jacksonville, FL</span>.
        Browse the directory to discover Black-owned food, services, retail, health, nonprofit
        spots and more — or suggest a place you love so others can find it too.
      </p>

      <div class="mt-8 flex flex-wrap items-center justify-center gap-3">
        <a
          href="/businesses"
          class="inline-flex items-center justify-center rounded-full bg-purple-600 px-6 py-3 text-sm font-semibold text-white shadow-sm hover:bg-purple-700"
        >
          Browse businesses
        </a>
        <a
          href="/suggest-business"
          class="inline-flex items-center justify-center rounded-full border border-slate-300 bg-white px-6 py-3 text-sm font-semibold text-slate-800 hover:bg-slate-50"
        >
          Suggest a business
        </a>
      </div>

      <p class="mt-10 text-[11px] text-slate-500">
        Built to make Black-owned businesses easier to find in Jacksonville, FL.
      </p>
    </div>
  </section>

  <Analytics />
</Layout>
