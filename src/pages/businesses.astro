---
import Layout from "../layouts/Layout.astro";
import BusinessSearch from "../components/BusinessSearch";
---

<Layout
  title="Browse Black-owned businesses in Jacksonville, FL • VantaJax"
  description="Search the VantaJax directory to find Black-owned businesses in Jacksonville, FL."
  fullWidth={true}
>
  <section class="min-h-[calc(100vh-4rem)] flex items-center justify-center">
    <div class="w-full max-w-3xl px-4 text-center">
      <p class="text-[11px] font-semibold uppercase tracking-[0.25em] text-purple-600">
        VantaJax • Directory
      </p>

      <div class="mt-8">
        <BusinessSearch client:load />
      </div>
    </div>
  </section>
</Layout>
