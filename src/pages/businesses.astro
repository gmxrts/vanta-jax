---
import Layout from "../layouts/Layout.astro";
import BusinessSearch from "../components/BusinessSearch";
---

<Layout
  title="Browse Black-owned businesses in Jacksonville • VantaJax"
  description="Search the VantaJax directory to find Black-owned businesses in Jacksonville, FL."
>
  <section class="flex h-full items-center justify-center">
    <div
      class="w-full max-w-4xl rounded-3xl border border-purple-900/60 bg-black/80 px-6 py-8 sm:px-8 sm:py-10 shadow-[0_0_40px_rgba(168,85,247,0.4)]"
    >
      <!-- back + title -->
      <div class="mb-5 sm:mb-6 space-y-2">
        <p class="text-[11px] text-slate-400">
          <a
            href="/"
            class="text-purple-300 hover:text-purple-100 underline underline-offset-2"
          >
            ← Back to home
          </a>
        </p>
        <h1 class="text-2xl sm:text-3xl font-semibold tracking-tight">
          Browse Black-owned businesses
        </h1>
        <p class="mt-1 max-w-xl text-sm text-slate-300">
          Search by name, city, ZIP code, category, or verification status. Use
          the filters below to explore Jacksonville’s Black-owned directory.
        </p>
      </div>

      <!-- Quick actions: narrower + centered, not full card width -->
      <div class="mb-7">
        <div
          class="mx-auto max-w-md rounded-2xl border border-slate-800/80 bg-black/70 px-4 py-4 sm:px-5 sm:py-5"
        >
          <p class="text-[11px] font-semibold text-slate-400 mb-3 uppercase tracking-[0.18em]">
            Quick actions
          </p>

          <div class="flex justify-center">
            <a
              href="/suggest-business"
              class="inline-flex items-center justify-center rounded-full border border-purple-500/70 bg-black/70 px-6 py-2.5 text-xs sm:text-sm font-semibold text-purple-100 shadow-[0_0_18px_rgba(147,51,234,0.75)] hover:bg-purple-600/20 hover:border-purple-300 hover:text-purple-50"
            >
              Suggest a business
            </a>
          </div>
        </div>
      </div>

      <!-- Search UI; inner content width is constrained by the component -->
      <BusinessSearch client:load />
    </div>
  </section>
</Layout>
