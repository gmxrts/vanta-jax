---
import Layout from "../../layouts/Layout.astro";
import { supabase } from "../../lib/supabaseClient";

const { id } = Astro.params;

const { data: business, error } = await supabase
  .from("businesses")
  .select("*")
  .eq("id", id)
  .single();

if (error) {
  console.error("Error loading business:", error);
}

// Helper to build full address string
const fullAddress = business
  ? [
      business.address,
      [business.city, business.state].filter(Boolean).join(", "),
      business.zip,
    ]
      .filter(Boolean)
      .join(" ")
  : "";
---

<Layout title={business ? business.name : "Business"}>
  <main class="min-h-[60vh] px-4 py-8">
    {business ? (
      <div class="mx-auto max-w-2xl space-y-6 rounded-2xl border border-purple-900/70 bg-black/70 p-5 shadow-[0_0_40px_rgba(76,29,149,0.7)]">
        <!-- Header -->
        <header class="flex flex-col gap-3 sm:flex-row sm:items-start sm:justify-between">
          <div>
            <h1 class="text-2xl font-bold text-slate-50 sm:text-3xl">
              {business.name}
            </h1>
            <p class="mt-1 text-sm text-slate-400">
              {business.category}
            </p>
            {business.area && (
              <p class="mt-0.5 text-xs text-slate-500">
                {business.area} â€¢ {business.city}, {business.state} {business.zip}
              </p>
            )}
          </div>

          <div class="flex flex-wrap gap-2 justify-start sm:justify-end">
            {business.verified && (
              <span class="inline-flex items-center rounded-full bg-purple-500/20 px-3 py-1 text-[10px] font-semibold uppercase tracking-wide text-purple-100">
                Verified
              </span>
            )}
            {business.featured && (
              <span class="inline-flex items-center rounded-full bg-amber-500/15 px-3 py-1 text-[10px] font-semibold uppercase tracking-wide text-amber-100">
                Featured
              </span>
            )}
          </div>
        </header>

        <!-- Description -->
        {business.description && (
          <section class="space-y-1">
            <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">
              About
            </h2>
            <p class="text-sm leading-relaxed text-slate-200">
              {business.description}
            </p>
          </section>
        )}

        <!-- Contact / info -->
        <section class="grid gap-4 sm:grid-cols-2">
          <div class="space-y-2">
            <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">
              Contact
            </h2>

            {business.phone && (
              <p class="text-sm text-slate-200">
                ğŸ“{" "}
                <a
                  href={`tel:${business.phone}`}
                  class="text-purple-300 underline underline-offset-2 decoration-purple-400/80 hover:text-purple-100"
                >
                  {business.phone}
                </a>
              </p>
            )}

            {business.website && (
              <p class="text-sm text-slate-200">
                ğŸŒ{" "}
                <a
                  href={business.website}
                  target="_blank"
                  rel="noreferrer"
                  class="text-purple-300 underline underline-offset-2 decoration-purple-400/80 hover:text-purple-100"
                >
                  Visit website
                </a>
              </p>
            )}

            {fullAddress && (
              <p class="text-sm text-slate-200">
                ğŸ“ {fullAddress}
              </p>
            )}
          </div>

          <div class="space-y-3">
            <h2 class="text-xs font-semibold uppercase tracking-[0.2em] text-slate-400">
              Location
            </h2>

            {fullAddress ? (
              <a
                href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(
                  fullAddress
                )}`}
                target="_blank"
                rel="noreferrer"
                class="inline-flex items-center justify-center rounded-xl bg-gradient-to-r from-purple-500 via-fuchsia-500 to-purple-400 px-4 py-2 text-xs font-semibold text-black shadow-[0_0_25px_rgba(147,51,234,0.8)] hover:brightness-110"
              >
                Open in Maps
              </a>
            ) : (
              <p class="text-xs text-slate-500">
                No address available for this business.
              </p>
            )}
          </div>
        </section>
      </div>
    ) : (
      <p class="text-center text-sm text-slate-400">
        Business not found.
      </p>
    )}
  </main>
</Layout>
